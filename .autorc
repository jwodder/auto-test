{
    "onlyPublishWithReleaseLabel": true,
    "baseBranch": "master",
    "author": "auto <auto@nil>",
    "noVersionPrefix": true,
    "plugins": [
        "git-tag",
        [
            "exec",
            {
                "afterChangelog": "python -c 'import sys; print(repr(sys.argv[1]))' \"$(echo \"$ARG_0\" | jq -r .bump)\" && bump2version \"$(echo \"$ARG_0\" | jq -r .bump)\"",
                "afterRelease": "python -m build && twine upload dist/*"
            }
        ]
    ]
}
